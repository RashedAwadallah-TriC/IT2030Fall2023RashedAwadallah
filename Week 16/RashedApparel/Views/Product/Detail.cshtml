@model ProductModel
@{
    ViewData["Title"] = "Product Detail";
}

<!-- NEW STYLE CHANGE... replaced 'text-success' with 'product-page-header' -->
<h1 class="display-4 text-center product-page-header">@ViewData["Title"]</h1>
<!-- END OF NEW STYLE CHANGE -->

<table class="table table-hover table-responsive">
    <tr>
        <td>Name</td>
        <td>@Model.ProductName</td>
    </tr>

    <tr>
        <td>Description</td>
        <td>@Model.ProductDescription</td>
    </tr>

    <tr>
        <td>Price</td>
        <td>@Model.ProductPrice.ToString("C2")</td>
    </tr>

    <!-- NEW STYLE CHANGE... I just moved this table row to the bottom -->
    <!-- I ALSO ADDED A CUSTOM CLASS 'product-detailed-image'' -->
    <tr>
        <td>Image</td>
        <td><img src="@Model.ProductImage" class="img-fluid rounded product-detailed-image" /></td>
    </tr>
    <!-- END OF NEW STYLE CHANGE -->

</table>
<a asp-controller="Product" asp-action="ListProducts" class="btn btn-primary">Back to List</a>